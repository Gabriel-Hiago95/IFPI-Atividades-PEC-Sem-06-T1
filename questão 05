n1 = float(input('Digite a primeira nota do aluno: ').strip())
n2 = float(input('Digite a segunda nota do aluno: ').strip())
n3 = float(input('Digite a terceira nota do aluno: ').strip())
media = (n1 + n2 + n3) / 3
if n3 > 8:
    media = media + 1
    if media > 10:
        media = 10
        print(f'A média do aluno foi ajustada para {media}')
    else:
        print(f'A média do aluno é de {media}')
else:
    print(f'A média do aluno é de {media}')
