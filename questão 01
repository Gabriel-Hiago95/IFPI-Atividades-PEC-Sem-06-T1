def saudacao():
    nome = str(input('Digite seu nome').strip())
    sexo = int(input('Escolha a opção correpondente ao seu sexo (1 - Para masculino ou 2 - Para feminino): ').strip())
    if sexo == 1:
        print('Ilmo Sr. {}'.format(nome))
    else:
        print(f'Ilma Sra. {nome}')
def main():
    saudacao()
if __name__ == '__main__':
    main()
